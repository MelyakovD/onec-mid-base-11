	ЭлементформыСогласованнаяСкидка.ПутьКДанным = "Объект.СогласованнаяСкидка";
	ЭлементформыСогласованнаяСкидка.Заголовок = "Согласованная скидка";
	ЭлементформыСогласованнаяСкидка.УстановитьДействие("ПриИзменении","ПриИзмененииСкидки");
	
	
	КомандаПересчетаТЧ = Команды.Добавить("ПересчетСуммыСУчетомСкидки"); 
	КомандаПересчетаТЧ.Заголовок = "Пересчет суммы с учетом скидки";
	КомандаПересчетаТЧ.Действие = "ПересчетТабличнойЧастиСУчетомСкидки";
	
	
	КнопкаПересчетаТЧ = Элементы.Добавить("ПересчетСуммыСУчетомСкидки", Тип("КнопкаФормы"),НоваяГруппаФормы);
	КнопкаПересчетаТЧ.ИмяКоманды = "ПересчетСуммыСУчетомСкидки";
	КнопкаПересчетаТЧ.Вид = ВидКнопкиФормы.ОбычнаяКнопка;
	КнопкаПересчетаТЧ.Картинка = БиблиотекаКартинок.Перечитать;
	КнопкаПересчетаТЧ.Отображение = ОтображениеКнопки.КартинкаИТекст; 
	// -- Меляков Д. 12.02.26 
	
	
	
	
	
	
	
	
	
	
